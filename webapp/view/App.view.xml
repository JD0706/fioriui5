<mvc:View controllerName="logaligroup.employees.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns="sap.m">
    <App id="app">
     <pages>
       <Page showHeader="false" >

      <f:FlexibleColumnLayout  id="fcl" backgroundDesign="Solid"  layout="{jsonModelLayout>/ActiveKey}">
         <f:beginColumnPages>
           <mvc:XMLView id="masterEmployeeView" viewName="logaligroup.employees.view.MasterEmployee"></mvc:XMLView>
         </f:beginColumnPages>
         <f:midColumnPages>
              <mvc:XMLView id="detailEmployeeView"  viewName="logaligroup.employees.view.EmployeeDetails" ></mvc:XMLView>
         </f:midColumnPages>
          <f:endColumnPages>
              <Page ></Page>
         </f:endColumnPages>
       </f:FlexibleColumnLayout>
       <footer>
       <Toolbar >
        <Label text="{i18n>layout}" class="sapUiSmalMargin"></Label>
          <Select items="{jsonModelLayout>/Layout}" selectedKey="{jsonModelLayout>/ActiveKey}">
             <core:Item key="{jsonModelLayout>key}" text="{jsonModelLayout>Text}"/>
          </Select>
       </Toolbar>
            
       </footer>
          
       </Page>
     
     </pages>
    </App>
</mvc:View>
