<mvc:View controllerName="logaligroup.employees.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content >
          
    <Label id= "labelEmployee" text="{i18n>labelEmployee}" class="sapUiTinyMargin"/>
     <Input id= "inputEmployee" value="{/employeeId}" maxLength="6" width="200px" class="sapUiSmallMarginEnd" liveChange="onValidate" ></Input>
    <Label  id="labelCountry" text="{i18n>labelCountry}" class="sapUiTinyMargin" visible="false"></Label>
    <Select id="slCountry" selectedKey="{/countrykey}" items="{/listCountry}" forceSelection="false" visible="false">
         <items>
            <core:Item key="{key}" text="{text}"/>
         </items>
     </Select>
</content>

    </Page>
</mvc:View>
