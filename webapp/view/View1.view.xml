<mvc:View controllerName="logaligroup.employees.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content >
        <HBox >
          
    <Label id= "labelEmployee" text="{i18n>labelEmployee}" class="sapUiTinyMargin"/>
     <Input id= "inputEmployee" value="{jsonCountries>/employeeId}" maxLength="6" width="200px" class="sapUiSmallMarginEnd"  ></Input> 
    <Select id="slCountry" selectedKey="{jsonCountries>/countrykey}" items="{jsonCountries>/listCountry}" forceSelection="false" >
         <items>
            <core:Item key="{jsonCountries>key}" text="{jsonCountries>text}"/>
         </items>
     </Select>
     <Button id="btnFilter" text ="{i18n>btnFilter}" icon = "sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd"></Button>
     <Button id="btnClearFilter" text ="{i18n>btnClearFilter}" icon = "sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"></Button>
     </HBox>
       <HBox >
        <Panel >
         <Button id="btnShowCity" text="{i18n>showCity}" visible="{jsonModelConfig>/visibleBtnShowCity}" press = "onShowCity"/>
        <Button id="btnHideCity" text="{i18n>HideCity}" visible="{jsonModelConfig>/visibleBtnHideCity}" press = "onsHideCity"/>
         <Table id="tableEmployee" items="{jsonEmployees>/}" >
         <columns>
         <Column visible ="{jsonModelConfig>/visibleID}">
          <header>
            <Label text="{i18n>tableid}"/>
          </header>
         </Column>
         <Column visible ="{jsonModelConfig>/visibleName}">
          <header>
            <Label text="{i18n>tableName}"/>
          </header>
         </Column>
         <Column  >
          <header>
            <Label text="{i18n>tableCountry}"/>
          </header>
         </Column>
         <Column visible ="{jsonModelConfig>/visibleCity}">
          <header>
            <Label text="{i18n>tableCity}"/>
          </header>
         </Column>
         </columns>
         <items>
          <ColumnListItem type="Active" press="showOrders" >
          <cells>
            <Label text="{jsonEmployees>EmployeeID}" ></Label>
            <Label text="{jsonEmployees>LastName}" ></Label>
            <Label text="{jsonEmployees>Country}" ></Label>
            <Label text="{jsonEmployees>City}" ></Label>
           </cells>
           
          </ColumnListItem>
         </items>
         </Table>
         <HBox id="ordersTable" >
         </HBox>
        </Panel>
        </HBox>
 </content>

    </Page>
</mvc:View>
